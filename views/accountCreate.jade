extends layout

block content
  
  h1.textWriter Create A New Account!      
  if(errors)
    for error in errors
      p.error= error
  
  div(name="writerNewAccountWrapper", id="writerNewAccountWrapper", class="writerNewAccountWrapper")
    br
    br
    form(id="writerNewAccountForm", method="post", action="/textWriter/createAccount")  
      p.textWriter Enter Your Desired Username:
        input.textWriter(type="text", name="writerNewUsername", id="writerNewUsername", autocomplete="off", autofocus)
      br  
      p.textWriter Enter Your Desired Password:
        input.textWriter(type="password", name="writerNewPassword", id="writerNewPassword", autocomplete="off")
      br  
      p.textWriter Enter The Same Password:
        input.textWriter(type="password", name="writerNewPassword2", id="writerNewPassword2")
      br
      br
      input.textWriterNewAccountButton(type="submit", name="textWriterNewAccountButton", id="textWriterNewAccountButton")    
        
